{
  "name": "@monorepo/ui",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "preview": "vite preview",
    "postinstall": "tsc && vite build",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint": "tsc && yarn lint:eslint",
    "format": "prettier --write 'src/**/*.{ts,tsx}' && yarn lint:eslint --fix",
    "format:check": "prettier -c 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@emotion/css": "^11.11.2",
    "@monorepo/styles": "file:../styles",
    "@tabler/icons-react": "^2.35.0",
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@monorepo/eslint-config": "file:../eslint-config",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-interactions": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.3.2",
    "@storybook/builder-vite": "^7.3.2",
    "@storybook/react": "^7.3.2",
    "@storybook/react-vite": "^7.3.2",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "eslint": "^8.47.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jsdom": "^22.1.0",
    "prettier": "3.0.2",
    "sass": "^1.66.1",
    "storybook": "^7.3.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.2",
    "vitest": "^0.34.2"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/ui.core.cjs",
  "module": "./dist/ui.core.es.js",
  "exports": {
    "./core": {
      "import": "./dist/ui.core.es.js",
      "require": "./dist/ui.core.cjs",
      "types": "./dist/core.d.ts"
    },
    "./hooks": {
      "import": "./dist/ui.hooks.es.js",
      "require": "./dist/ui.hooks.cjs",
      "types": "./dist/hooks.d.ts"
    },
    "./system": {
      "import": "./dist/ui.system.es.js",
      "require": "./dist/ui.system.cjs",
      "types": "./dist/system.d.ts"
    },
    "./style.css": "./dist/style.css"
  }
}
